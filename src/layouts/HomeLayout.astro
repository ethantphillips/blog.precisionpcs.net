---
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<main class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
  {posts.map(post => (
    <a href={`/blog/${post.slug}/`} class="border rounded-lg overflow-hidden shadow hover:shadow-lg transition">
      {post.data.thumbnail && (
        <img src={post.data.thumbnail} alt={post.data.title} class="w-full h-48 object-cover" />
      )}
      <div class="p-4">
        <h2 class="text-2xl font-bold text-[#DB4520]">{post.data.title}</h2>
        <p class="mt-2 text-gray-600">{post.data.description}</p>
        <p class="mt-1 text-sm text-gray-400">{post.data.pubDate}</p>
      </div>
    </a>
  ))}
</main>
