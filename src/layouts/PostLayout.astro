---
const { title, pubDate, author, tags, thumbnail } = Astro.props;
---

<article class="max-w-3xl mx-auto p-6">
  {thumbnail && (
    <img src={thumbnail} alt={title} class="w-full h-64 object-cover rounded-lg shadow mb-6" />
  )}
  <h1 class="text-4xl font-extrabold text-[#DB4520] mb-4">{title}</h1>
  <div class="text-sm text-gray-500 mb-6">
    <span>By {author}</span> · <span>{pubDate}</span> · {tags?.map(tag => (
      <span class="ml-1 px-2 py-1 border rounded-full">{tag}</span>
    ))}
  </div>
  <slot />
</article>
